<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">


   <ImageView
       android:layout_marginTop="20dp"
       android:src="@drawable/hdhadisedit"
       android:layout_width="match_parent"
       android:layout_height="120dp" />
<LinearLayout
    android:layout_marginTop="30dp"
    android:gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_weight="1"
        android:id="@+id/iv_hadis1"
        android:src="@drawable/logohadissatu"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <ImageView
        android:layout_weight="1"
        android:id="@+id/iv_hadis2"
        android:src="@drawable/logohadisdua"
        android:layout_width="100dp"
        android:layout_height="100dp" />


</LinearLayout>

    <LinearLayout
        android:layout_marginTop="45dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:text="Pengembang"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="30dp"
            android:src="@drawable/aguswal"
            android:layout_weight="1"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <ImageView
            android:src="@drawable/zuhri"
            android:layout_weight="1"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <ImageView
            android:layout_marginTop="30dp"
            android:src="@drawable/winarno"
            android:layout_weight="1"
            android:layout_width="120dp"
            android:layout_height="120dp" />

    </LinearLayout>
    </LinearLayout>







</LinearLayout>